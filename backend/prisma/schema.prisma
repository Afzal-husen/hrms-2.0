generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String
  mobile   String
  address  String
  roles    roles[]
  branches branches[]
}

model roles {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  permissions String[]
  created_at  DateTime @default(now()) @db.Timestamptz()
  updated_at  DateTime @updatedAt @db.Timestamptz()
  user_id     String
  users       users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model branches {
  id          String        @id @default(uuid())
  name        String
  created_at  DateTime      @default(now()) @db.Timestamptz()
  updated_at  DateTime      @updatedAt @db.Timestamptz()
  user_id     String
  users       users         @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  departments departments[]
}

model departments {
  id           String         @id @default(uuid())
  name         String
  created_at   DateTime       @default(now()) @db.Timestamptz()
  updated_at   DateTime       @updatedAt @db.Timestamptz()
  branch_id    String
  branches     branches       @relation(fields: [branch_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  designations designations[]
}

model designations {
  id            String      @id @default(uuid())
  name          String
  created_at    DateTime    @default(now()) @db.Timestamptz()
  updated_at    DateTime    @updatedAt @db.Timestamptz()
  department_id String
  departments   departments @relation(fields: [department_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
